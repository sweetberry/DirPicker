{
  "name": "DirPicker",
  "version": "1.1.0",
  "engines": {
    "node": "~6.4.0",
    "npm": ">=5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sweetberry/DirPicker.git"
  },
  "author": "pixel@sweetberry.com",
  "license": "MIT",
  "main": "js/main.js",
  "config": {
    "electron": "1.7.9",
    "destinationDirPath": "./dest/",
    "distributionDirPath": "./dist/"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-es2015-modules-commonjs"
    ]
  },
  "esdoc": {
    "source": "./src/js",
    "destination": "./esdoc",
    "experimentalProposal": {
      "classProperties": true,
      "objectRestSpread": true
    }
  },
  "scripts": {
    "esdoc": "esdoc",
    "debug": "run-s _clean:dest _webpack:renderer _copy:All _electron:debug",
    "_copy:All": "run-p _copy:packageJson _copy:mainJs _copy:html _copy:css _copy:fonts _copy:variables _copy:templates",
    "_copy:packageJson": "cpx 'package.json' $npm_package_config_destinationDirPath",
    "_copy:mainJs": "cpx 'src/js/main.js' $npm_package_config_destinationDirPath/js",
    "_copy:html": "cpx 'src/html/**' $npm_package_config_destinationDirPath/html",
    "_copy:css": "cpx 'src/css/**' $npm_package_config_destinationDirPath/css",
    "_copy:fonts": "cpx 'src/fonts/**' $npm_package_config_destinationDirPath/fonts",
    "_copy:variables": "cpx 'src/variables/**' $npm_package_config_destinationDirPath/variables",
    "_copy:templates": "cpx 'src/templates/**' $npm_package_config_destinationDirPath/templates",
    "_clean:dest": "rimraf $npm_package_config_destinationDirPath",
    "_clean:dist": "rimraf $npm_package_config_distributionDirPath",
    "_electron:debug": "electron $npm_package_config_destinationDirPath",
    "_webpack:renderer": "webpack"
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "backbone-event-logger": "sweetberry/backbone-event-logger",
    "backbone.localstorage": "^2.0.2",
    "backbone.marionette": "^2.4.7",
    "bootstrap": "^3.3.7",
    "bootstrap-3-typeahead": "^4.0.0",
    "csv": "^2.0.0",
    "fs-extra": "^4.0.3",
    "html5sortable": "^0.3.1",
    "jquery": "^3.2.1",
    "mkdirp": "^0.5.0",
    "open": "0.0.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "electron-packager": "^10.1.0",
    "electron-prebuilt": "^1.4.13",
    "esdoc": "^0.5.2",
    "html-loader": "^0.5.1",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.8.1"
  }
}
